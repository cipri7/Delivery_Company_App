<!DOCTYPE html>
<html lang="en">
@{
    string username = TempData["Username"] as string;
}

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<style>

    body {
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
    }

    footer {
        width: 100%;
        background-color: #343a40; /* Culorile footer-ului preluate din stilurile Cargus.com */
        color: #fff;
        padding: 20px 0;
        position: absolute;
        bottom: 0;
    }

    .main-content {
        min-height: calc(100vh - 120px);
        overflow-y: auto;
    }

    .center-text {
        text-align: center;
    }

    .divider {
        width: 100%;
        border-bottom: 1px solid #ccc;
        margin-top: 10px;
        margin-bottom: 20px;
    }
</style>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">UrziSoft Logistics</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Acasă <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewSedii", "Sedii")">Sedii <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Rute")">Rute</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewAll", "Pachet")">Colete</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="d-flex">
            <!-- GitHub link -->
            <div>
                &copy; 2024 - <a href="" target="_blank" rel="noopener noreferrer">UrziSoft Logistics. Toate drepturile rezervate.</a>
            </div>
            <!-- Logout link -->
            <div class="ms-auto">
                <a class="nav-link text-dark" asp-area="" asp-controller="Rute" asp-action="Login">Logout</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
